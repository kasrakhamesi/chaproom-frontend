{
	"compilerOptions": {
		"rootDir": ".",
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"target": "es5",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
    "incremental": true,
		"jsx": "preserve",
		"paths": {
			"@/main/*": [
				"main/*"
			],
			"@/admin/*": [
				"admin/*"
			],
			"@/shared/*": [
				"shared/*"
			]
		}
	},
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
	"exclude": [
		"node_modules",
		"tmp"
	]
}
